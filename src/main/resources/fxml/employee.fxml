<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="aPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@/css/employee.css" />
   </stylesheets>

   <children>
      <Button fx:id="logoutBtn" layoutX="627.0" layoutY="466.0" mnemonicParsing="false" onAction="#showLogout" text="Logout">
         <font>
            <Font name="Arial" size="13.0" />
         </font></Button>

      <ImageView fitHeight="124.0" fitWidth="182.0" layoutX="14.0" layoutY="369.0">
         <Image url="@../img/criminals.jpg" />
      </ImageView>

      <ImageView fitHeight="83.0" fitWidth="109.0" layoutX="14.0" layoutY="19.0">
         <Image url="@../img/logo.jpg" />
      </ImageView>
      <Label layoutX="148.0" layoutY="23.0" prefHeight="50.0" prefWidth="466.0" text="WELCOME TO CRIMINAL RECORDS" textFill="#1b1b1b">
         <font>
            <Font name="Georgia Bold" size="24.0" />
         </font>
      </Label>
      <ListView fx:id="listView" layoutX="14.0" layoutY="139.0" prefHeight="194.0" prefWidth="182.0" />
      <Label layoutX="66.0" layoutY="117.0" text="All criminals">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
      </Label>
      <Button fx:id="addCriminalBtn" layoutX="15.0" layoutY="339.0" mnemonicParsing="false" onAction="#showAddCriminals" text="Add new criminal" textFill="#1b1b1b">
