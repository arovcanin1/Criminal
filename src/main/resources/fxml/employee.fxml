            <Font name="Arial" size="12.0" />
         </font></Button>
      <Label layoutX="424.0" layoutY="117.0" prefHeight="16.0" prefWidth="192.0" text="Details about selected criminal">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
      </Label>
      <ListView fx:id="listViewRecords" layoutX="503.0" layoutY="138.0" prefHeight="194.0" prefWidth="182.0" />
      <Button fx:id="deleteBtn" layoutX="391.0" layoutY="284.0" mnemonicParsing="false" onAction="#deleteRecord" prefHeight="24.0" prefWidth="101.0" text="Delete record" textFill="#151515">
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addRecordBtn" layoutX="283.0" layoutY="284.0" mnemonicParsing="false" onAction="#showAddRecord" text="Add new record" textFill="#19191a">
         <font>
            <Font name="Arial" size="12.0" />
         </font></Button>
      <TextField fx:id="firstNameFld" layoutX="326.0" layoutY="139.0" promptText="First name" />
      <TextField fx:id="lastNameFld" layoutX="326.0" layoutY="173.0" promptText="Last name" />
      <TextField fx:id="jmbgFld" layoutX="326.0" layoutY="210.0" promptText="JMBG" />
      <TextField fx:id="birthDateFld" layoutX="326.0" layoutY="243.0" promptText="Birth date" />
      <Label layoutX="271.0" layoutY="343.0" prefHeight="16.0" prefWidth="192.0" text="Details about selected record">
         <font>
            <Font name="Arial Bold" size="13.0" />
         </font>
      </Label>
      <TextField fx:id="placeRecordFld" layoutX="208.0" layoutY="373.0" promptText="Place of crime" />
      <TextField fx:id="dateRecordFld" layoutX="367.0" layoutY="373.0" prefHeight="26.0" prefWidth="150.0" promptText="Date of crime" />
      <TextField fx:id="codeRecordFld" layoutX="208.0" layoutY="408.0" promptText="Code" />
      <TextField fx:id="descriptionRecordFld" alignment="TOP_LEFT" layoutX="208.0" layoutY="441.0" prefHeight="50.0" prefWidth="312.0" promptText="Description" />
      <Button fx:id="profileId" layoutX="628.0" layoutY="36.0" mnemonicParsing="false" onAction="#showProfile" text="Profile">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
      </Button>
      <AmbientLight color="CHARTREUSE" layoutX="269.0" layoutY="224.0" lightOn="true" />
   </children>
</AnchorPane>
